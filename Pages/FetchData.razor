@page "/fetchdata"
@inject EmpresaService empresaService

@using System.Net.Http.Json
@using System.Threading.Tasks

<h1>Empresas</h1>

@if (empresas == null)
{
    <p>Carregando...</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Site</th>
                <th>Segmento</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var empresa in empresas)
            {
                <tr>
                    <td>@empresa.Nome</td>
                    <td>@empresa.Site</td>
                    <td>@empresa.Segmento</td>
                    <td>
                        <button class="btn btn-primary" @onclick="() => EditarEmpresa(empresa)">Editar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Empresa> empresas;

    private void EditarEmpresa(Empresa empresa)
    {
        // Abrir formulário de edição para a empresa selecionada
    }

    protected override async Task OnInitializedAsync()
    {
        empresas = await empresaService.GetEmpresas();
    }
}
